{
  "name": "rex",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "[ \"$NODE_ENV\" = \"production\" ] && npm run start-prod -s || npm run start-dev -s",
    "start-prod": "npm run build -s; node index.js",
    "start-dev": "npm run dev-server -s & npm run dev-proxy -s & npm run tests -s",
    "test": "tape -r babel-register -r css-modules-require-hook spec/**/*.js | tap-dot",
    "tests": "nodemon -w src -w spec -e js,html,css -q -C -x 'npm run lint -s; npm test -s'",
    "lint": "eslint src util spec || true; stylelint src/**/*.css || true",
    "dev-server": "nodemon -w src -w spec/api.yaml -e js,html,css -q index.js",
    "dev-proxy": "BABEL_ENV=hot webpack-dev-server -d --hot --inline --no-info --config util/webpack.dev.js",
    "build": "webpack -p --progress --config util/webpack.prod.js",
    "prebuild": "rm -rf dist; mkdir -p dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdlabs/rex.git"
  },
  "bugs": {
    "url": "https://github.com/nerdlabs/rex/issues"
  },
  "homepage": "https://github.com/nerdlabs/rex#readme",
  "devDependencies": {
    "babel-eslint": "5.0.0",
    "babel-preset-react-hmre": "1.1.1",
    "eslint": "2.2.0",
    "eslint-plugin-babel": "3.1.0",
    "eslint-plugin-react": "4.2.0",
    "nodemon": "1.9.1",
    "react-addons-test-utils": "0.14.7",
    "stylelint": "4.5.0",
    "stylelint-config-standard": "4.0.0",
    "swagger-express-middleware": "1.0.0-alpha.12",
    "tap-dot": "1.0.4",
    "tape": "4.5.1",
    "webpack-dev-server": "1.14.1",
    "webpack-hot-middleware": "2.9.1"
  },
  "dependencies": {
    "babel-loader": "6.2.4",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.6.5",
    "compression": "1.6.1",
    "css-loader": "0.23.1",
    "css-modules-require-hook": "4.0.0",
    "ejs": "2.4.1",
    "express": "4.13.4",
    "extract-text-webpack-plugin": "1.0.1",
    "isomorphic-fetch": "2.2.1",
    "normalize.css": "3.0.3",
    "postcss": "5.0.19",
    "postcss-cssnext": "2.4.0",
    "postcss-loader": "0.8.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.4.0",
    "react-router": "2.0.0",
    "react-router-redux": "4.0.0",
    "redux": "3.3.1",
    "redux-thunk": "2.0.1",
    "style-loader": "0.13.0",
    "throng": "2.0.1",
    "webpack": "1.12.14"
  }
}
