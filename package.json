{
  "name": "rex",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run start-prod; else npm run start-dev; fi",
    "start-prod": "npm run build; node index.js",
    "start-dev": "npm run tests & npm run watch & npm run server",
    "test": "tape -r babel-register -r css-modules-require-hook spec/**/*.js | tap-dot",
    "tests": "npm test --silent & onchange 'src/**/*.*' 'spec/**/*.*' -- npm test --silent",
    "server": "nodemon -w src -w spec/api.yaml -e js,html,css --no-colors -q index.js",
    "watch": "touch dist/main.js.tmp; npm run watch-js & npm run watch-extract",
    "watch-js": "watchify -d -t babelify -p [css-modulesify --after postcss-cssnext --after $PWD/util/postcss-global -o dist/main.css] -o dist/main.js.tmp src/client.js",
    "watch-extract": "onchange dist/main.js.tmp -- npm run extract --silent",
    "extract": "<dist/main.js.tmp exorcist dist/main.js.map > dist/main.js",
    "build": "browserify -t babelify -g envify -g [uglifyify -x .js] -p [css-modulesify --after postcss-cssnext --after $PWD/util/postcss-global --after csswring -o dist/main.css] src/client.js | uglifyjs -mc warnings=false > dist/main.js",
    "postinstall": "mkdir -p dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdlabs/rex.git"
  },
  "bugs": {
    "url": "https://github.com/nerdlabs/rex/issues"
  },
  "homepage": "https://github.com/nerdlabs/rex#readme",
  "devDependencies": {
    "babel-eslint": "5.0.0",
    "eslint": "2.1.0",
    "eslint-plugin-react": "3.16.1",
    "exorcist": "0.4.0",
    "nodemon": "1.9.0",
    "onchange": "2.0.0",
    "react-addons-test-utils": "0.14.7",
    "tap-dot": "1.0.1",
    "tape": "4.4.0",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "babel-core": "6.5.2",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-strict-mode": "6.5.2",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.5.2",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "compression": "1.6.1",
    "css-modules-require-hook": "2.1.0",
    "css-modulesify": "0.17.1",
    "csswring": "4.2.1",
    "ejs": "2.4.1",
    "envify": "3.4.0",
    "express": "4.13.4",
    "isomorphic-fetch": "2.2.1",
    "normalize.css": "3.0.3",
    "postcss": "5.0.16",
    "postcss-cssnext": "2.4.0",
    "postcss-modules-extract-imports": "1.0.0",
    "postcss-modules-local-by-default": "1.0.1",
    "postcss-modules-scope": "1.0.0",
    "postcss-modules-values": "1.1.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.4.0",
    "react-router": "2.0.0",
    "react-router-redux": "3.0.0",
    "redux": "3.3.1",
    "redux-actions": "0.9.1",
    "redux-promise": "0.5.1",
    "swagger-express-middleware": "1.0.0-alpha.12",
    "throng": "2.0.1",
    "uglify-js": "2.6.1",
    "uglifyify": "3.0.1"
  }
}
