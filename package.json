{
  "name": "rex",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "[ \"$NODE_ENV\" = \"production\" ] && npm run start-prod -s || npm run start-dev -s",
    "start-prod": "npm run build -s; node index.js",
    "start-dev": "npm run server -s & BABEL_ENV=hot npm run watch -s & npm run tests -s",
    "test": "./util/test.js spec/**/*.js | tap-dot",
    "tests": "nodemon -w src -w spec -e js,html,css -q -C -x 'npm run lint -s; npm test -s'",
    "server": "nodemon -w src -w spec/api.yaml -e js,html,css -q index.js",
    "lint": "eslint src util spec || true; stylelint src/**/*.css || true",
    "watch": "watchify -d -t babelify -p [css-modulesify --after postcss-cssnext --after $PWD/util/postcss-global -o dist/main.css] -p browserify-hmr -o dist/main.js src/client.js",
    "build": "browserify -t babelify -g envify -g [uglifyify -x .js] -p [css-modulesify --after postcss-cssnext --after $PWD/util/postcss-global --after csswring -o dist/main.css] src/client.js | uglifyjs -mc warnings=false > dist/main.js",
    "prebuild": "rm -rf dist; mkdir -p dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdlabs/rex.git"
  },
  "bugs": {
    "url": "https://github.com/nerdlabs/rex/issues"
  },
  "homepage": "https://github.com/nerdlabs/rex#readme",
  "devDependencies": {
    "babel-eslint": "5.0.0",
    "babel-preset-react-hmre": "1.1.1",
    "browserify-hmr": "0.3.1",
    "eslint": "2.2.0",
    "eslint-plugin-babel": "3.1.0",
    "eslint-plugin-react": "4.2.0",
    "nodemon": "1.9.1",
    "react-addons-test-utils": "0.14.7",
    "stylelint": "4.5.0",
    "stylelint-config-standard": "4.0.0",
    "stylelint-statement-max-nesting-depth": "2.0.1",
    "swagger-express-middleware": "1.0.0-alpha.12",
    "tap-dot": "1.0.4",
    "tape": "4.5.1",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.6.5",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "compression": "1.6.1",
    "css-loader": "0.23.1",
    "css-modules-require-hook": "4.0.0",
    "css-modulesify": "0.20.0",
    "ejs": "2.4.1",
    "envify": "3.4.0",
    "express": "4.13.4",
    "isomorphic-fetch": "2.2.1",
    "normalize.css": "3.0.3",
    "postcss": "5.0.19",
    "postcss-cssnext": "2.4.0",
    "postcss-loader": "0.8.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.4.0",
    "react-router": "2.0.0",
    "react-router-redux": "4.0.0",
    "redux": "3.3.1",
    "redux-thunk": "2.0.1",
    "style-loader": "0.13.0",
    "throng": "2.0.1",
    "uglify": "0.1.5",
    "uglifyify": "3.0.1"
  }
}
